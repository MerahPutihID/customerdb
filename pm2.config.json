{
  "apps": [
    {
      "name": "merahputih-backend",
      "script": "main.js",
      "cwd": "/var/www/bc.merahputih-id.com",
      "instances": 1,
      "exec_mode": "cluster",
      "env_file": "/var/www/customerdb/backend/.env",
      "env": {
        "NODE_ENV": "production"
      },
      "log_type": "json",
      "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
      "error_file": "/var/log/pm2/merahputih-backend-error.log",
      "out_file": "/var/log/pm2/merahputih-backend-out.log",
      "log_file": "/var/log/pm2/merahputih-backend-combined.log",
      "time": true,
      "autorestart": true,
      "max_restarts": 10,
      "min_uptime": "10s",
      "restart_delay": 4000,
      "watch": false,
      "ignore_watch": [
        "node_modules",
        "uploads",
        "logs"
      ],
      "max_memory_restart": "1G",
      "kill_timeout": 5000,
      "listen_timeout": 8000
    }
  ]
}
